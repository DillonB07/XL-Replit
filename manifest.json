{
  "manifest_version": 3,
  "name": "XL Replit",
  "description": "Extra features for the Replit website.",
  "version": "1.1",
  "minimum_chrome_version": "105",
  "author": "LuisAFK",
  "icons": {
    "192": "assets/favicon.png",
    "128": "assets/favicon128.png"
  },
  "permissions": ["storage", "declarativeNetRequest"],
  "optional_permissions": ["cookies"],
  "host_permissions": [
    "https://replit.com/*",
    "https://firewalledreplit.com/*",
    "https://staging.replit.com/*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "block_gql",
        "enabled": false,
        "path": "src/net-rules/block_gql.json"
      }
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://replit.com/*",
        "https://firewalledreplit.com/*",
        "https://staging.replit.com/*"
      ],
      "css": ["src/content.css"],
      "js": ["src/content.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "src/service-worker.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/public/*"],
      "matches": ["https://*.replit.com/*", "https://*.firewalledreplit.com/*"]
    }
  ],
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "XL Replit",
    "default_icon": {
      "192": "assets/favicon.png",
      "128": "assets/favicon128.png"
    }
  }
}
